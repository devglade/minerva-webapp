<ul class="list-session">
  <%- if controller_name != 'sessions' %>
    <li><%= link_to '로그인', new_session_path(resource_name) %></li>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li><%= link_to '계정 생성', new_registration_path(resource_name) %></li>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <li><%= link_to '비밀번호 찾기', new_password_path(resource_name) %></li>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li><%= link_to '인증 메일 재전송', new_confirmation_path(resource_name) %></li>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></li>
  <% end -%>
</ul>

<%- if devise_mapping.omniauthable? && action_name == 'new' && (controller_name == 'sessions' || controller_name == 'registrations') %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% provider_name = provider.to_s %>
    <% if provider_name == 'google_oauth2' %>
      <% provider_name = "google" %>
    <% end %>
    <%= link_to content_tag(:span, "", class: "fa fa-#{provider_name}") + "Sign in with #{OmniAuth::Utils.camelize(provider_name)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-social btn-#{provider_name}" %>
  <% end -%>
<% end -%>

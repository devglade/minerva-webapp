<div class="card spin">
    <div class="card-body">
        <% index = @spins.count - spin_counter %>
        <h4 class="card-title">
            <span class="badge badge-info"><%= "##{index}" %></span>
            <%= link_to retrospect_spin_posts_path(spin_id: spin) do %>
                <%= spin.title %>
            <% end %>
        </h4>
        <h6 class="card-subtitle mb-2 text-muted">
            <% if spin.status == "closed" %>
                <span class="badge badge-secondary"><%= spin.status %></span>
            <% else %>
                <span class="badge badge-success"><%= spin.status %></span>
            <% end %>
        </h6>
        <p class="card-text"><%= spin.summary %></p>
        <div class="btn-group" role="group" aria-label="Spin Buttons">
            <%= link_to edit_retrospect_spin_path(id: spin), remote: true, class: 'btn btn-sm btn-outline-secondary' do %>
                <i class="material-icons">edit</i>
            <% end %>
        </div>
    </div>
</div>
<p id="notice"><%= notice %></p>

<p>
  <strong>Status:</strong>
  <%= @spin.status %>
</p>

<p>
  <strong>Title:</strong>
  <%= @spin.title %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @spin.summary %>
</p>

<div class="btn-group" role="group" aria-label="Spin Buttons">
    <%= link_to edit_retrospect_spin_path(id: @spin), remote: true, class: 'btn btn-sm btn-outline-secondary' do %>
        <i class="material-icons">edit</i>
    <% end %>
    <%= link_to retrospect_spins_path, class: 'btn btn-sm btn-outline-secondary' do %>
        <i class="material-icons">delete</i>
    <% end %>
</div>

<div class="modal fade" id="retrospect" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-small">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="retrospectTitle">Spin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= bootstrap_form_for [:retrospect, @spin], remote: true do |form| %>
      <div class="modal-body">
        <div class="form-group">
          <%= form.select :status, Spin.statuses.keys, default: "opened", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.text_area :summary, class: "form-control" %>
        </div>

        <div class="actions">
          <%= form.submit class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
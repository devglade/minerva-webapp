<div class="modal fade" id="retrospect" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="retrospectTitle">새로운 회고 등록</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <i class="material-icons" aria-hidden="true">close</i>
        </button>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for [@space, @project, @spin], remote: true do |form| %>
          <div class="form-group">
            <%= form.select :status, Spin.statuses.keys, {prompt: "opened"}, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.text_area :summary, class: "form-control" %>
          </div>

          <div class="actions">
            <%= form.submit class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>